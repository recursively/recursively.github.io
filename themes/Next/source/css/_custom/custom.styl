.site-description {
  letter-spacing: 5px;
  font-size: 15px;
  font-weight: bold;
  margin-top: 15px;
  margin-left: 13px;
  color: rgb(243, 112, 85);
}

.feed-link {
  margin-top: 15px;
  margin-left: 7px;
}
.feed-link a {
  color: rgb(255, 255, 255);
  border: 1px solid rgb(158, 158, 158) !important;
  border-radius: 15px;
}
.feed-link a:hover {
  background-color: rgb(161, 102, 171);
}
.feed-link a i {
  color: rgb(255, 255, 255);
}

//图片外部的容器方框
.out-img-topic {
  display: block;
  max-height:300px;
  margin-bottom: 0;
  overflow: hidden;
}

//图片
img.img-topic {
  display: inline-block;
  margin-left: .7em;
  margin-right: .7em;
  padding: 0;
  float: none;
  clear: right;
}

.posts-expand .post-body img {
  border: 0;
  margin: 0 auto 0;
}

.posts-expand .post-meta {
  color: #999;
}

body {
  color: #ccc;
